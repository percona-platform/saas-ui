// ./cypress/tsconfig.json (extends main root config).
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["../src/*"]
    },
    "types": [
      "node",
      "cypress",
      "../node_modules/cypress"
    ]
  },
  "files": [
    "./index.d.ts"
  ],
  "include": [
    "**/*.*"
  ],
  "exclude": [
    "dist"
  ]
}
