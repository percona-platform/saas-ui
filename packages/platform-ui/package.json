{
  "name": "@percona/platform-ui",
  "version": "0.2.0",
  "description": "Percona Enterprise Platform UI",
  "private": false,
  "homepage": "https://platform.percona.com",
  "license": "Apache-2.0",
  "files": [
    "build",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percona-platform/saas-ui.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "NODE_OPTIONS=--max-old-space-size=4096 react-scripts build",
    "eject": "react-scripts eject",
    "test": "react-scripts test --verbose",
    "test:coverage": "react-scripts test --coverage --watchAll=false --collectCoverageFrom=src/**/*.{ts,tsx,js} --collectCoverageFrom=!src/core/gen/**/*",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:fix": "yarn lint --fix",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome --headless",
    "cy:merge": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/report.json",
    "cy:report": "marge cypress/reports/*.json -f report -o cypress/reports/",
    "report:copyScreenshots": "cp -r cypress/screenshots cypress/reports",
    "report:copyVideos": "cp -r cypress/videos cypress/reports",
    "generate:report": "yarn cy:merge; yarn report:copyScreenshots; yarn report:copyVideos; yarn cy:report",
    "test:ci": "CI=true react-scripts test"
  },
  "dependencies": {
    "@grafana/data": "7.1.3",
    "@grafana/ui": "7.1.3",
    "@percona/platform-core": "^0.6.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.3",
    "@types/history": "^4.7.8",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "connected-react-router": "^6.8.0",
    "emotion": "^10.0.27",
    "final-form": "^4.20.1",
    "google-protobuf": "^3.13.0",
    "grpc-web": "^1.2.1",
    "history": "4.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-final-form": "^6.5.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "react-toastify": "^6.0.8",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.1.3",
    "typesafe-actions": "^5.1.0",
    "typescript": "~3.7.5"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.4.11",
    "@grafana/eslint-config": "^2.0.3",
    "@testing-library/cypress": "^7.0.1",
    "@types/faker": "^5.1.2",
    "@types/react-redux": "^7.1.9",
    "cypress": "^5.6.0",
    "cypress-cy-select": "^0.2.2",
    "cypress-multi-reporters": "^1.4.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-react-hooks": "^4.1.2",
    "faker": "^5.1.0",
    "jest-canvas-mock": "^2.2.0",
    "mocha": "^8.1.3",
    "mochawesome": "^6.2.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.1.0"
  },
  "keywords": [
    "percona",
    "platform",
    "ui"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bugs": {
    "url": "https://github.com/percona-platform/saas-ui/issues"
  },
  "prox": "https://platform-dev.percona.com"
}
