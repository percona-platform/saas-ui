    "react-scripts": "3.4.3",
    "typescript": "~3.7.5"
  },
  "devDependencies": {
    "@grafana/eslint-config": "^2.0.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.3",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
