    "test:ci": "CI=true react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "build": "yarn lint && yarn clean && tsc -p tsconfig.json --outDir dist",
    "release": "np"
  },
  "dependencies": {
    "@popperjs/core": "^2.5.3",
