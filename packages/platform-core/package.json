{
  "name": "@percona/platform-core",
  "version": "0.4.0",
  "description": "Platform UI core components",
  "private": false,
  "keywords": [
    "ui",
    "components"
  ],
  "author": "Percona <info@percona.com>",
  "homepage": "https://github.com/percona-platform/saas-ui/tree/master/packages/core#readme",
  "license": "Apache-2.0",
  "main": "dist/js/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/js/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "start": "yarn dev",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:fix": "yarn lint --fix",
    "dev": "yarn build:types && yarn build:babel:dev --watch --verbose",
    "test": "react-scripts test --verbose",
    "test:ci": "CI=true react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "build": "yarn lint && yarn clean && yarn build:babel && yarn build:types",
    "build:babel": "yarn build:babel:cjs && yarn build:babel:esm && yarn build:babel:umd",
    "build:babel:dev": "yarn build:babel:cjs && yarn build:babel:esm",
    "build:babel:cjs": "BABEL_ENV=cjs babel --source-maps --extensions '.js,.ts,.tsx' src --out-dir dist/js",
    "build:babel:esm": "BABEL_ENV=esm babel --source-maps --extensions '.js,.ts,.tsx' src --out-dir dist/esm",
    "build:babel:umd": "BABEL_ENV=umd babel --source-maps --extensions '.js' dist/esm --out-dir dist/umd --plugins=transform-es2015-modules-umd",
    "build:types": "yarn build:types:cjs && yarn build:types:esm",
    "build:types:cjs": "tsc -p tsconfig.dts.json --outDir dist/js",
    "build:types:esm": "tsc -p tsconfig.dts.json --outDir dist/esm",
    "release": "np"
  },
  "dependencies": {
    "@popperjs/core": "^2.5.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.3",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "react-popper": "^2.2.3",
    "react-scripts": "3.4.3",
    "typescript": "~3.7.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/preset-typescript": "^7.10.4",
    "@grafana/eslint-config": "^2.0.3",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest-canvas-mock": "^2.2.0",
    "jest-enzyme": "^7.1.2",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "@grafana/data": "7.1.3",
    "@grafana/ui": "7.1.3",
    "emotion": "^10.0.27",
    "final-form": "^4.20.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-final-form": "^6.5.1"
  },
  "np": {
    "yolo": true,
    "anyBranch": false,
    "releaseDraft": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percona-platform/saas-ui.git"
  },
  "bugs": {
    "url": "https://jira.percona.com/browse/PMM"
  }
}
