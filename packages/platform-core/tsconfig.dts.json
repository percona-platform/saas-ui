{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@/components/*": ["components/*"],
      "@/shared/*": ["shared/*"],
      "@/theming/*": ["theming/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": ["./src/**/**.test.tsx", "./src/**/**.test.ts"]
}
